{
  "name": "workflows",
  "type": "module",
  "version": "1.0.6",
  "private": true,
  "scripts": {
    "prepare": "bun run simple-git-hooks",
    "build": "echo 'Build completed!'",
    "lint": "bun run eslint .",
    "typecheck": "echo 'Typecheck successful!'",
    "usecheck": "echo 'Usecheck successful!'",
    "test": "echo 'Tests passed!'",
    "release": "bun run bumpp && bun run ./release.sh"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.1.0",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "git+https://github.com/toplenboren/simple-git-hooks.git#7625657"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint-staged"
  },
  "lint-staged": {
    "*": [
      "bun run eslint --fix"
    ]
  }
}
